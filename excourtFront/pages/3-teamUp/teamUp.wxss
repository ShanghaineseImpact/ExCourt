/* pages/teamUp/teamUp.wxss */


view,
text,
image {
  box-sizing: border-box;
}
image {
  width: auto;
  height: auto;
}
.container {
  display: flex; /* 开启Flexbox布局 */
  flex-direction: column; /* 子项目按列排列 */
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
  padding: 30px;
  background-color: #f5f5f5;
  min-height: 100vh; /* 最小高度为视口高度，确保占满整个屏幕 */
  width: 100vw; /* 宽度为视口宽度 */
}
button {
  width: 100%; /* 设置按钮宽度为100% */
  height: 100%;
  padding: 0px;
  margin: 0;
  border: none;
  background: none;
  line-height: normal;
  font-size: inherit;
  color: inherit;
  display: flex;
}

.frame_1 {
  margin-top: 5%;
  flex-direction: column;
  width: 100%;
  height: 100%;
  display: flex;
  position: relative;
}
.rectangle_568 {
  background-color: #fff;
  border: 1px solid #d3c7c7;
  border-radius: 12px;
  width: 100%;
  height: 201px;
  margin-top: 0;
  margin-left: 0;
  position: relative;
}
.mask_group {
  flex-direction: row;
  width: 100%;
  height: 202px;
  margin-top: -201px;
  margin-left: 0;
  display: flex;
  position: relative;
  transform: rotate(0);
}
.rectangle_561 {
  border-radius: 12px;
  flex-direction: column;
  align-items: flex-start;
  width:100%;
  height: 202px;
  margin-top: 0;
  margin-left: 0;
  display: flex;
  position: relative;
  overflow: hidden;
  -webkit-mask-image: linear-gradient(#d9d9d9, #d9d9d9);
}
.sendlogo {
  object-fit: cover;
  flex-shrink: 0;
  width: 90%;
  height: 220px;
  margin-top: -3px;
  margin-left: -18px;
  position: relative;
  transform: rotate(0);
}
