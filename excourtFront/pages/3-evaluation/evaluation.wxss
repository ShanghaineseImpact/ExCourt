.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 20px;
    background-color: #f4f4f4;
  }
  
  .form-group {
    width: 100%;
    max-width: 500px; /* 限制最大宽度，防止在大屏幕上过宽 */
    margin-bottom: 20px;
    text-align: center; /* 文本居中 */
  }
  
  .picker {
    width: 95%; /* 宽度自适应 */
    border: 1px solid #ccc;
    padding: 10px;
    background-color: #f9f9f9;
    border-radius: 4px; /* 圆角边框 */
    text-align: left; /* 文本左对齐 */
    font-size: 16px; /* 设置字体大小 */
  }
  
  textarea {
    width: 95%; /* 宽度自适应 */
    height: 120px; /* 根据需要调整高度 */
    border: 1px solid #ccc;
    padding: 10px;
    border-radius: 4px; /* 圆角边框 */
    font-size: 16px; /* 设置字体大小 */
    resize: none; /* 禁止调整大小 */
  }
  
  /* 添加按钮的样式 */
  .button {
    width: 100%; /* 设置宽度为100%，但会被.form-item的宽度限制 */
    padding: 15px;
    background-color: rgba(37,188,108, 0.9); 
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 18px;
  }