/* pages/6-PersonInfo/6-PersonInfo.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    background-color: #f5f5f5;
    min-height: 100vh;
  }
  
  .user-avatar {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 70px;
  }
  
  .avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 4px solid #ffffff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    margin-top: 30px; /* 增加上边距，将头像位置提高 */
  }
  
  .button-container {
    position: absolute;
    bottom: -70px; /* 根据需要调整 */
    left: 50%;
    transform: translateX(-50%);
  }
  
  .change-avatar {
    width: 80%; /* 按钮宽度为容器的80% */
    height: 50px;
    margin: 10px 0;
    background-color: rgb(37,188,108);
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 16px;
  }
  
  .user-info {
    width: 80%;
  }
  
  .input-field, .readonly-field {
    height: 40px;
    line-height: 40px;
    width: 100%;
    margin: 10px 0;
    padding: 0 10px;
    background-color: #f8f8f8;
    border: 1px solid #ddd;
    border-radius: 5px;
    text-align: center;
  }
  
  .readonly-field {
    background-color: #ffffff; /* 设置只读信息的背景颜色 */
  }
  
  .picker-container {
    width: 80%;
    margin: 10px 0;
  }
  
  .picker {
    height: 40px;
    line-height: 40px;
    width: 100%;
    background-color: #f8f8f8;
    border: 1px solid #ddd;
    border-radius: 5px;
    text-align: center;
  }
  
  .save-button {
    width: 80%;
    height: 50px;
    margin: 10px 0;
    background-color: rgb(37,188,108);
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 16px;
  }