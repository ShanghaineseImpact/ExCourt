.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start; /* 修改为start，使内容从顶部开始 */
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.accepted-info {
  width: 100%;
  background-color: #fff;
  border-radius: 5px;
  padding: 15px;
  margin-bottom: 20px;
}

.accepted-text {
  font-size: 18px;
  color: #333;
}

.session-info {
  font-weight: bold;
  color: #1aad19; /* 为场次信息添加绿色高亮 */
}

.friend-info {
  width: 100%;
  background-color: #fff;
  border-radius: 5px;
  padding: 15px;
  margin-bottom: 20px;
  text-align: center;
}

.friend-text {
  font-size: 16px;
  color: #333;
}

.add-button {
  padding: 5px 10px;
  background-color: rgb(37,188,108);
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 14px;
  margin-top: 10px;
}
