/* claim.wxss */
.container {
    display: flex; /* 开启Flexbox布局 */
    flex-direction: column; /* 子项目按列排列 */
    align-items: center; /* 水平居中 */
    justify-content: center; /* 垂直居中 */
    padding: 20px;
    background-color: #f5f5f5;
    min-height: 100vh; /* 最小高度为视口高度，确保占满整个屏幕 */
    width: 100vw; /* 宽度为视口宽度 */
  }
  
  .item-list {
    margin-bottom: 20px;
    width: 100%; /* 设置宽度为100%，但会被.container的居中和宽度限制 */
    max-width: 600px; /* 设置最大宽度，防止列表过宽 */
  }
  
  .item {
    padding: 15px;
    background-color: #ffffff;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 10px;
    width: 100%; /* 设置宽度为100%，但会被.item-list的宽度限制 */
    max-width: 600px; /* 设置最大宽度，与.item-list一致 */
  }
  
  .selected-item {
    margin-top: 20px;
    padding: 15px;
    background-color: #e0f7fa;
    border: 1px solid #007aff;
    border-radius: 5px;
    width: 100%; /* 设置宽度为100%，但会被.item-list的宽度限制 */
    max-width: 600px; /* 设置最大宽度，与.item-list一致 */
  }
  
  .reason-input {
    margin-top: 20px;
    width: 100%; /* 设置宽度为100%，但会被.item-list的宽度限制 */
    max-width: 600px; /* 设置最大宽度，与.item-list一致 */
  }
  
  input {
    width: 100%; /* 设置宽度为100%，但会被.reason-input的宽度限制 */
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .submit-button {
    width: 100%; /* 设置宽度为100%，但会被.item-list的宽度限制 */
    padding: 15px;
    background-color:  rgba(37,188,108, 0.9); 
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 18px;
  }