<!--pages/4-misclaim/misclaim.wxml-->
<view class="container">
  <view class="form-item">
    <text>物品名称</text>
    <input bindinput="onInputChange" data-field="itemName" placeholder="请输入物品名称" />
  </view>
  <view class="form-item">
    <text>申诉描述</text>
    <input bindinput="onInputChange" data-field="description" placeholder="请输入申诉描述" />
  </view>
  <view class="form-item">
    <text>联系方式</text>
    <input bindinput="onInputChange" data-field="contactInfo" placeholder="请输入联系方式" />
  </view>
  <button class="submit-button" bindtap="submitMisclaim">提交申诉</button>
</view>
