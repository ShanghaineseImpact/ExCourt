.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

button {
  width: 80%;
  height: 50px;
  margin: 10px 0;
  background-color: rgb(37,188,108);
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.picker-container {
  margin: 10px 0;
  width: 80%;
}

.picker {
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #f8f8f8;
  border: 1px solid #ddd;
  border-radius: 5px;
}
